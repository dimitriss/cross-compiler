FROM dimitriss/cross-compiler:base
MAINTAINER dimitriss

ENV CROSS_TRIPLE x86_64-apple-darwin14
ENV CROSS_ROOT /usr/${CROSS_TRIPLE}
ENV PATH ${PATH}:${CROSS_ROOT}/bin
ENV LD_LIBRARY_PATH /usr/lib/llvm-3.6/lib:${CROSS_ROOT}/lib
ENV MAC_SDK_VERSION 10.10

RUN echo "deb http://llvm.org/apt/jessie/ llvm-toolchain-jessie-3.6-binaries main" >> /etc/apt/sources.list && \
    curl http://llvm.org/apt/llvm-snapshot.gpg.key | apt-key add - && \
    apt-get update

RUN apt-get update && \
    apt-get install -y --force-yes clang-3.6 llvm-3.6-dev automake autogen \
                                   libtool libxml2-dev uuid-dev libssl-dev bash \
                                   patch make tar xz-utils bzip2 gzip sed cpio git-core cmake

RUN curl -L https://github.com/tpoechtrager/osxcross/archive/master.tar.gz | tar xvz && \
    curl -L -o /osxcross-master/tarballs/MacOSX${MAC_SDK_VERSION}.sdk.tar.xz https://www.dropbox.com/s/yfbesd249w10lpc/MacOSX${MAC_SDK_VERSION}.sdk.tar.xz
RUN cd /osxcross-master/ && \
    echo | SDK_VERSION=${MAC_SDK_VERSION} OSX_VERSION_MIN=10.6 ./build.sh
RUN wget -O /tmp/cmake.sh http://cmake.org/files/v3.3/cmake-3.3.2-Linux-x86_64.sh 1>&2
RUN cd /opt && echo y | bash /tmp/cmake.sh && ln -f -s /opt/cmake*/bin/cmake /usr/local/bin/cmake && cd -
RUN cd /osxcross-master/ && \
    SDK_VERSION=${MAC_SDK_VERSION} OSX_VERSION_MIN=10.6 ./build_llvm_dsymutil.sh && \
    mv /osxcross-master/target ${CROSS_ROOT} && \
    mkdir -p ${CROSS_ROOT}/lib && \
    rm -rf /osxcross-master
